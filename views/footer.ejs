<$ if(!md){ $>

	<style media="screen">

	.animation-point.slide-crop-x{
		overflow-x: hidden;
		max-width: 0;
		transition: max-width 0.4s ease-in-out;
		white-space: nowrap;
	}
	.passed.animation-point.slide-crop-x{
		max-width: 600px;
	}


	.animation-point.fade-translate-center-y{
		opacity: 0 !important;
		transform: translate(-50%, 20px) !important;
		transition: opacity 0.4s ease-in-out,
								transform 0.4s ease-in-out;;
	}
	.passed.animation-point.fade-translate-center-y{
		opacity: 1 !important;
		transform: translate(-50%, 0px) !important;
	}

	.animation-point.fade-translate-y{
		opacity: 0 !important;
		transform: translate(0, 20px) !important;
		transition: opacity 0.4s ease-in-out,
								transform 0.4s ease-in-out;;
	}
	.passed.animation-point.fade-translate-y{
		opacity: 1 !important;
		transform: translate(0, 0px) !important;
	}

	.animation-point.fade-translate-x{
		opacity: 0 !important;
		transform: translate(-20px, 0) !important;
		transition: opacity 0.4s ease-in-out,
								transform 0.4s ease-in-out;;
	}
	.passed.animation-point.fade-translate-x{
		opacity: 1 !important;
		transform: translate(0px, 0) !important;
	}


	.animation-point.fade-in{
		opacity: 0;
		transition: opacity 0.4s ease-in-out;
	}
	.passed.animation-point.fade-in{
		opacity: 1;
	}


	.animation-point.grow-x{
		width: 0 !important;
	}
	.passed.animation-point.grow-x{
		width: 40px !important;
		transition: width 0.4s ease-in-out;
	}


	.animation-point.grow-x-before:before{
		width: 0 !important;
	}
	.passed.animation-point.grow-x-before:before{
		width: 40px !important;
		transition: width 0.4s ease-in-out;
	}



	</style>
<$ } $>
