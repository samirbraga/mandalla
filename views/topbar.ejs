<div class="topbar <$- classTopbar $> static">
	<div class="topbar-content responsive-width">
		<div class="logo">
			<a href="/">
				<img src="/public/Images/logo-white.png" alt="Logo Mandalla Comunicação">
				<img src="/public/Images/logo-colorfull.png" alt="Logo Mandalla Comunicação">
			</a>
		</div>
		<div class="topbar-side-menu">
			<label for="toggle-main-menu" class="main-menu-icon">
				<span></span>
				<span></span>
				<span></span>
			</label>
			<input type="checkbox" style="width: 0px; height: 0px; visibility: hidden" id="toggle-main-menu" >
			<nav class="topbar-menu-options">
				<ul>
					<li><a href="/">Início</a></li>
					<li><a href="/exposicao">Exposição</a></li>
					<li><a href="/audiografias">Audiografias</a></li>
					<li><a href="/imprensa">Imprensa</a></li>
					<li><a href="/sobre">Sobre</a></li>
					<li><a href="/contato">Contato</a></li>
				</ul>
			</nav>
			<script>
			(function(){
				var topbarMenuOptions = document.querySelectorAll('.topbar-menu-options ul li');
				var paths = ['/', '/exposicao', '/audiografias', '/imprensa', '/sobre', '/contato'];
				var pathname = window.location.pathname.match(/^\/[a-z-._#$%&]*/g)[0];
				var index = paths.indexOf(pathname);
				if(topbarMenuOptions[index]){
					$(topbarMenuOptions[index]).class.add('i-am-here');
				}
			})();
			</script>
			<div class="instagram-icon topbar-menu-icon">
				<a href="https://www.instagram.com/ruasbiograficas/" ><i class="fa fa-instagram fa-lg"></i></a>
			</div>
			<div class="search-icon topbar-menu-icon">
				<i class="fa fa-search fa-lg"></i>
			</div>
		</div>
		<hr class="soft-line" >
	</div>
</div>

<div class="search-container viewport-units" data-properties="width: 100vw; height: 100vh;">
	<div class="search-background-overlay"></div>
	<div class="search-wrapper">
		<div class="close-icon">&#x2573;</div>
		<form class="" action="/audiografias" method="get">
			<input placeholder="Procure por ruas que queria conhecer" type="text" name="q" >
			<button type="submit">
				<i class="fa fa-search" ></i>
			</button>
		</form>
	</div>
</div>
