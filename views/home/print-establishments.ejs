<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="utf-8">
		<title>Exposição | Ruas Biográficas</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
		<link rel="icon" href="/favicon.ico" type="image/x-icon">
		<link rel="stylesheet" href="/public/stylesheet/general.css">
		<link href="https://fonts.googleapis.com/css?family=Maven+Pro|Raleway:100,300,400|Ubuntu" rel="stylesheet">
		<link href="/public/stylesheet/libs/font-awesome/font-awesome.min.css" rel="stylesheet">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
		<meta http-equiv="content-language" content="br" />
    <script src="/public/javascript/libs/smooth-scroll/smoothscroll.js" ></script>
		<script src="/public/javascript/libs/modernizr/modernizr.js" ></script>
		<script src="/public/javascript/general.js" ></script>
    <style>
       @media print{
         header{
           display: none !important;
         }
       }
      .establishments-list-container{
        font-size: 0;
      }
      .establishment-container{
        display: inline-block;
        font-size: 11pt;
        width: 50%;
        margin: 15px 0;
        white-space: nowrap;
      }
      .establishment-container .content{
        display: inline-block;
        vertical-align: top;
        margin-left: 20px;
      }
      .establishment-container .content .name{
        display: block;
        font-size: 1.2em;
        font-family: 'Raleway', sans-serif;
        margin-bottom: 10px;
      }
      .establishment-container .content .info{
        display: block;
        margin-bottom: 5px;
        font-family: 'Maven Pro', sans-serif;
      }
      .establishment-container .content .info a{
        font-family: 'Maven Pro', sans-serif;
        display: inline;
      }
      .establishment-container .content .info a:hover{
        text-decoration: underline;
      }
      .establishment-container figure{
        display: inline-table;
        vertical-align: top;
        width: 50px;
        height: 100%;
      }
      .establishment-container figure img{
        width: 100%;
        display: table-cell;
        vertical-align: middle;
      }
    </style>
	</head>
	<body>
    <section>
      <header class="section-title bottom">
        <div>
          <h2>NOSSA REDE INTEGRADA</h2>
          <span></span>
        </div>
      </header>
      <div class="establishments-list-container responsive-width m-auto">
        <$ data.establishments.forEach(function(establishment, i){ $>
          <div class="establishment-container">
            <figure>
              <img src="/public/images/google-maps-clusterer/marker-low-size.png" alt="">
            </figure>
            <div class="content">
              <span class="name" >
                <$- establishment.name $>
              </span>
              <span class="address info" >
                <i class="fa fa-location-arrow fa" ></i>
                <$- `${establishment.street}, ${establishment.number} - ${establishment.district}` $>
              </span>
              <span class="trading info" >
                <i class="fa fa-shopping-cart fa" ></i>
                <a href="<$- establishment.site $>">
                  <$- establishment.trading.charAt(0).toUpperCase() + establishment.trading.substring(1, establishment.trading.length) $>
                </a>
              </span>
              <span class="site info" >
                <i class="fa fa-globe fa" ></i>
                <a href="<$- establishment.site $>">  <$- establishment.site.replace(/^((http|https)\:\/\/)/, '').replace(/(\/)?$/, '') $> </a>
              </span>
            </div>
          </div>
          <$ }); $>
        </div>
    </section>
    <script>
      var autoPrint = <$- autoPrint $>;
      $(document).on('DOMContentLoaded', function(){
        if(autoPrint){
          window.print()
        }
      })
    </script>
  </body>
</html>
